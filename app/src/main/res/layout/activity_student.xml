<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="#fff"
    tools:context=".Lessons.StudentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageGlide"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:onClick="onInter4"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/logo" />

                <ImageView
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:onClick="onBack"
                    android:src="@drawable/ic_arrow" />
            </RelativeLayout>

            <ImageView
                android:src="@drawable/student_1"
                android:layout_width="250dp"
                android:layout_height="90dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageAlphabet"
                        android:onClick="onAlphabet"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/grey_img1"/>

                    <ImageView
                        android:id="@+id/imageInter1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:onClick="onInter1"
                        android:src="@drawable/grey_img3"/>

                    <ImageView
                        android:id="@+id/imageInter2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:onClick="onInter2"
                        android:src="@drawable/grey_img5"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageBeginner"
                        android:onClick="onBeginner"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/grey_img2"/>

                    <ImageView
                        android:id="@+id/imageInter3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:onClick="onInter3"
                        android:src="@drawable/grey_img4"/>

                    <ImageView
                        android:id="@+id/imageAdvanced"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginBottom="30dp"
                        android:onClick="onAdvanced"
                        android:src="@drawable/grey_img6"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>